<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fire"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/fire1"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/fire2"
        android:gravity="top|left"
        android:paddingLeft="5dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/fire2"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"      
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/fire4"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/fire2"
        android:layout_alignRight="@+id/fire1"
        android:gravity="center" 
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/textstyle3"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/fire3"
        android:gravity="center" 
        android:text="@string/total"/>

    <TextView
        android:id="@+id/fire3"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/fire4"
        android:layout_toRightOf="@+id/textstyle3"
        android:gravity="center"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textstyle4"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/fire4"
        android:layout_toLeftOf="@+id/fire4"
        android:gravity="center"
        android:text="@string/pre"/>

</RelativeLayout>
